<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.TrackDetailsActivity">
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/trackInfo_fr_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/trackInfo_name_tv"
                android:text="Test Track"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                ></TextView>
            <TextView
                android:layout_below="@id/trackInfo_name_tv"
                android:layout_marginEnd="-5dp"
                android:textSize="14dp"
                android:layout_toEndOf="@id/trackInfo_image"
                android:layout_marginTop="10dp"
                android:id="@+id/trackInfo_from_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Point 1"></TextView>
            <TextView
                android:layout_marginStart="-5dp"
                android:textSize="14dp"
                android:layout_below="@id/trackInfo_from_tv"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/trackInfo_image"
                android:id="@+id/trackInfo_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Point 2"></TextView>
            <ImageView
                android:layout_below="@id/trackInfo_name_tv"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/trackInfo_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/from_to_image"></ImageView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="-5dp"
                android:layout_below="@id/trackInfo_name_tv"
                android:layout_alignParentEnd="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="20dp"
                android:background="@color/purple_700"
                android:backgroundTint="@color/purple_700"
                app:cardCornerRadius="10dp">
                <TextView
                    android:id="@+id/trackInfo_price_tv"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="18dp"
                    android:text="0.5 JD"></TextView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/trackInfo_image"
                android:layout_marginBottom="90dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/distance"></ImageView>
                <TextView
                    android:id="@+id/trackInfo_distance_tv"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="12.5km"></TextView>

                <ImageView
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/time"></ImageView>
                <TextView
                    android:id="@+id/trackInfo_time_tv"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Travel Time: 45 min."></TextView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>